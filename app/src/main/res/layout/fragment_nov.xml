<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anton.dialog_fragment.NovFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_Opisot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt_Zborot"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Внесете опис за зборот"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edt_Zborot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Внесете го зборот"
            android:inputType="textPersonName" />
    </RelativeLayout>

</FrameLayout>
